#!/usr/bin/env -S unshare -rm sh

if [ "$#" -ne "1" ]
then
	echo "USAGE: $0 <mountpoint>"
	exit 1
fi

dir="$1"
[ -e "$dir" ] || mkdir "$dir"
mount -t tmpfs none "$dir"
cd "$dir"

ln -s lib/x86_64-linux-gnu lib64
ln -s usr/bin .
mkdir dev
mkdir etc
mkdir lib
mkdir usr
mount -R /dev dev
mount -Bo ro /etc etc
mount -Bo ro /lib lib
mount -Bo ro,nosuid /usr usr

mkdir proc
mkdir home
mount -t tmpfs none home
cp -r etc/skel home/nobody
mount -o remount,ro none .

# Allow unshare within chroot.
mount -M . / 2>/dev/null

exec env -i HOME=/home/nobody PATH="$PATH" SHELL="$SHELL" TERM="$TERM" chroot . unshare -Upf --mount-proc
